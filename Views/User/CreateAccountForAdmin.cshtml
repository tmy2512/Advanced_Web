
<!-- Views/User/CreateAccountForAdmin.cshtml -->
@model ManagementAssistanceForBusinessWeb_OnlyRole.Models.UserViewModels.CreateAccountForAdminViewModel;
@{
    ViewData["title"] = "Create Account For Admin";
    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
} 

<style>
    .create-account-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .create-account-form {
        width: 300px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        color: #000;
    }

    .create-account-form .form-group {
        margin-bottom: 15px;
    }

    .create-account-form .form-group label {
        display: block;
        margin-bottom: 5px;
    }

    .create-account-form .form-group input,
    .create-account-form .form-group select {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    .create-account-form .form-group .radio-group {
        display: flex;
        justify-content: space-between;
    }

    .create-account-form .form-group .radio-group label {
        margin-right: 10px;
    }

    .create-account-form .btn {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
    }

    .create-account-form .btn:hover {
        background-color: #0056b3;
    }

    /* .signin-link {
        text-align: center;
        margin-top: 20px;
    }

    .signin-link-text {
        color: blue;
        text-decoration: none;
    }

    .signin-link-text:hover {
        text-decoration: underline;
    } */
</style>

<div class="create-account-container">
    <div class="create-account-form">
        <h2>Create Admin Account</h2>
        <form asp-controller="User" asp-action="CreateForAdmin" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" asp-for="Username" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" asp-for="Email" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" class="form-control" asp-for="PhoneNumber" required />
            </div>
            <div class="form-group">
                <label for="role">Role</label>
                <div class="radio-group">
                    <label><input type="radio" name="Role" value="User" asp-for="Role" /> User</label>
                    <label><input type="radio" name="Role" value="Admin" asp-for="Role" /> Admin</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
        @* <div class="signin-link">
            <p>Don't have an account? <a href="@Url.Action("Login", "User")" class="signin-link-text">Signup now</a></p>
        </div> *@
    </div>
</div>
