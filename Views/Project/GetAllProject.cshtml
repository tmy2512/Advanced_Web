.projectboard {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
}

.column {
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 10px;
    margin: 0 10px;
    flex: 1;
}

.column h2 {
    font-size: 1.2em;
    margin-bottom: 10px;
}

.task-card {
    background-color: #fafafa;
    border: 1px solid #eee;
    border-radius: 5px;
    margin-bottom: 10px;
    padding: 10px;
}

.task-header {
    font-weight: bold;
    margin-bottom: 5px;
}

.task-title {
    font-size: 1em;
    margin-bottom: 5px;
}

.task-desc {
    font-size: 0.9em;
    color: #666;
    margin-bottom: 10px;
}

.task-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8em;
}

.tag {
    background-color: #007bff;
    color: #fff;
    border-radius: 3px;
    padding: 2px 5px;
}

